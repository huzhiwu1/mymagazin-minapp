/* pages/content/content.wxss */
.container{
    background-color:#fff;
    width:100%;
}

.header{
    width:100%;
    text-align:center;
    margin:10rpx 5rpx;
}
.header >.title{
    width:100%;
    font-size:40rpx;
  
}
.avator{
    font-size:30rpx;
    margin:10rpx;
    color:#999;
}
.avator>.author{
    color:#0077ff;
    margin-right:10rpx;
}
.showPannel{
    width:100%;
    text-align: center
}
.showPannel > swiper{
    height:560rpx;
}
.showPannel image{
    display: inline-block;
    overflow: hidden;
    width:750rpx;
    height:560rpx;
}
.content{
    margin:20rpx 10rpx;
    text-indent:2em;
    line-height:1.43rem;
}
.content >text{
    text-indent:2em;
}
.read{
    color:#999
}

/* 视频的poster */
.cover-img{
    width:100%;
    height:100%;
    position:relative;
    background-color:red;
    overflow: hidden;
    color:#fff;

}
.control-img{
    position:absolute;
    top:50%;
    left:50%;
    transform:translate(-50%,-50%);
    border:1px solid rgba(0,0,0,0.5);
    border-radius:50%;
    background-color:rgba(1,1,1,.5);
    text-align:center;
    padding:20rpx;
}
.control-img2{
    width:60rpx;
    height:60rpx;
    margin-left:20rpx;
    
}
/* 写音乐组件 */

.audio{
    display:flex;
    flex-direction:row;
    justify-content:flex-start;
    align-items:center;
    width:90%;
    margin:0 auto;
    background-color:rgba(0,0,0,0.02);
    border:1px solid rgba(0,0,0,0.05)

}
.left{
    height:200rpx;
    line-height:250rpx;
    flex: 1 1 auto;
    margin:0 20rpx;


}
.left>image{
    display:inline-block;
    width:80rpx;
    height:80rpx;
    
}
.right{
    flex: 3 3 auto;
    margin-right:20rpx;
    display:flex;
    flex-direction:column;
    align-items:flex-start;
}
.title{
    font-size:40rpx;

}
.from{
    margin:20rpx 0;
    font-size:30rpx;
    color:#777;
}
.showProgress{
    width:100%;
    font-size:30rpx;
    color:#777;
}
.showProgress>proogress{
    margin-bottom:20rpx;
}

.circle{
    bottom:17rpx;
    position:relative;
    width:20rpx;
    height:20rpx;
    border-radius:50%;
    background-color:rgb(9,187,7)
}
.audioTime{
    width:100%;
    margin-right:20rpx;

}
.start,.end{
    font-size:30rpx;
    color:#777;
}
.start{
    float:left;
}
.end{
    float:right;
}